<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TODO</title>

    <link rel="stylesheet" href="index.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container sticky-top">
      <nav class="py-3 border-bottom">
        <div class="row flex-nowrap justify-content-between align-items-center">
          <div class="text-center">
            <h3 class="text-dark" style="font-family: 'arial black'">
              TODO APP
            </h3>
          </div>
        </div>
      </nav>
    </div>
    <div class="container py-5 position-relative">
      <div class="justify-content-center align-items-center">
        <div
          class="shadow p-3"
          style="border-radius: 0.75rem; background-color: #eff1f2"
        >
          <h4 class="text-dark" style="font-family: 'Arial'">ADD TASK</h4>
          <div class="pb-2">
            <form action="/index/create" method="post" class="needs-validation">
              <div>
                <label for="task" class="form-label">task name</label>
                <div class="row mb-2">
                  <div class="col-md-4">
                    <input
                      id="task"
                      name="task"
                      class="form-control"
                      required
                    />
                  </div>
                </div>
                <label class="form-label">deadline</label>
                <div class="row mb-3">
                  <div class="col-md-4">
                    <input
                      name="date"
                      type="datetime-local"
                      class="form-control"
                      required
                    />
                  </div>
                </div>
                <button class="btn btn-outline-dark">send</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="container position-relative">
      <div
        class="shadow p-3"
        style="border-radius: 0.75rem; background-color: #eff1f2"
      >
        <div class="d-flex">
          <h4 class="text-dark" style="font-family: 'Arial'">TASK LIST</h4>
        </div>
        <div>
          <table class="table mb-0">
            <thead>
              <tr>
                <th scope="col">Task</th>
                <th scope="col">Date</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% for (const object of tasks) { %>
              <div class="">
                <tr class="fw-normal">
                  <td class="align-middle"><%= object.name %></td>
                  <td class="align-middle"><%= object.date %></td>

                  <td class="align-middle row row-cols-auto">
                    <div class="col">
                      <form action="/index/update" method="post">
                        <input
                          type="hidden"
                          name="id"
                          value="<%= object.id %>"
                        />
                        <button id="check-button" class="btn btn-outline-dark">
                          <%= object.done %>
                        </button>
                      </form>
                    </div>
                    <div class="col">
                      <form action="/index/delete" method="post">
                        <input
                          type="hidden"
                          name="id"
                          value="<%= object.id %>"
                        />
                        <button id="delete-button" class="btn btn-outline-dark">
                          delete
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
              </div>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <script src="http://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript" src="index.js"></script>
  </body>
</html>
